{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "target": "es5",
    "downlevelIteration": true,
    "declaration": true,
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
